        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-6 col-md-6">
                    <label style="width: 100%;" class="text-secondary">Personal Details</label>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-2 mt-2">
                        <input asp-for="Input.FirstName" class="form-control" />
                        <label asp-for="Input.FirstName"></label>
                    </div>
                    <div class="form-floating mb-2 mt-2">
                        <input asp-for="Input.LastName" class="form-control" />
                        <label asp-for="Input.LastName"></label>
                    </div>
                    <div class="form-floating mb-2 mt-2">
                        <input asp-for="Username" class="form-control" disabled />
                        <label asp-for="Username" class="form-label"></label>
                    </div>
                    <div class="form-floating mb-2 mt-2">
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
                </div>
                <div class="col-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.ProfilePicture" style="width: 100%;" class="text-secondary"></label>
                        @if (Model.Input.ProfilePicture != null)
                        {
                            <img id="profilePicture" style="width:300px;height:275px; object-fit:cover"
                                src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
                        }
                        else
                        {
                            <img id="profilePicture" style="width:300px;height:275px; object-fit:cover" src="">
                        }

                        <input type="file" accept=".png,.jpg,.jpeg,.gif,.tif" asp-for="Input.ProfilePicture"
                            class="form-control mt-2 w-75"
                            onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

